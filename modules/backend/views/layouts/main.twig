{% extends '@general/views/layouts/main.twig' %}

{% block cssFiles %}
    {{ parent() }}

    <link href="{{ '/backend/css/bootstrap.min.css' }}" rel="stylesheet" />
    <link href="{{ '/backend/css/bootstrap-reset.css' }}" rel="stylesheet" />

    <link href="{{ '/backend/ext/font-awesome/css/font-awesome.css' }}" rel="stylesheet" />
    <link href="{{ '/backend/ext/jquery-easy-pie-chart/jquery.easy-pie-chart.css' }}" rel="stylesheet" type="text/css" media="screen" />

    <link rel="stylesheet" href="{{ '/backend/css/owl.carousel.css' }}" type="text/css" />

    <link href="{{ '/backend/css/slidebars.css' }}" rel="stylesheet" />

    <link href="{{ '/backend/css/style.css' }}" rel="stylesheet" />
    <link href="{{ '/backend/css/style-responsive.css' }}" rel="stylesheet" />

    <link href="{{ '/backend/css/main.css' }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block scriptFiles %}
    {{ parent() }}
    <script src="{{ '/backend/js/bootstrap.min.js' }}"></script>
    <script class="include" type="text/javascript" src="{{ '/backend/js/jquery.dcjqaccordion.2.7.js' }}"></script>
    <script src="{{ '/backend/js/jquery.scrollTo.min.js' }}"></script>
    <script type="text/javascript" src="{{ '/backend/js/jquery.nicescroll.js' }}"></script>
    <script src="{{ '/backend/js/common-scripts.js' }}"></script>
    <script src="{{ '/backend/js/backend.js' }}" type="text/javascript"></script>
{% endblock %}

{% block header %}
    {% include '@app/modules/backend/views/partials/head.twig' %}
{% endblock %}

{% block body %}

    {% include '@app/modules/backend/views/partials/leftMenu.twig' %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">

            {% include '@app/modules/backend/views/partials/overview.twig' %}

            {% block content %}
            {% endblock %}

        </section>
    </section>
    <!--main content end-->

    {% include '@app/modules/backend/views/partials/slidebar.twig' %}

{% endblock %}

{% block footer %}
    {% include '@app/modules/backend/views/partials/footer.twig' %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    Backend.init({
        DTsSearch: "{{ t('back', 'Поиск') }}",
        DTsLengthMenu: "{{ t('back', 'элементов на страницу') }}",
        DTsZeroRecords: "{{ t('back', 'Ничего не найдено') }}",
        DTsInfo: "{{ t('back', 'из') }}",
        DTsInfoEmpty: "{{ t('back', 'Список пуст') }}",
        DTsInfoFilteredOne: "{{ t('back', 'отфильтровано из') }}",
        DTsInfoFilteredTo: "{{ t('back', 'записей') }}",
    });
{% endblock %}