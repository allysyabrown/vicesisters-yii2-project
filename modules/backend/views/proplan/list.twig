{% extends '@backend/views/layouts/simpleTable.twig' %}

{% block scriptFiles %}
    {{ parent() }}
    <script src="{{ '/backend/js/pages/proplans-list.js' }}" type="text/javascript"></script>
{% endblock %}

{% block table %}

    <table class="table table-striped table-hover table-bordered">

        <thead>
            <th>{{ t('base', 'ID') }}</th>
            <th>{{ t('base', 'Имя') }}</th>
            <th>{{ t('back', 'Базовая цена') }}</th>
            <th>{{ t('back', 'Длительность') }}</th>
            <th>{{ t('back', 'Баллов к рейтингу') }}</th>
            <th></th>
        </thead>

        <tbody>
            {% for proplan in proplans %}
                <tr>
                    <td>{{ proplan.id }}</td>
                    <td>{{ proplan.proplanName }}</td>
                    <td>{{ proplan.price }}</td>
                    <td>{{ proplan.durationName }}</td>
                    <td>{{ proplan.rate }}</td>
                    <th>
                        <button class="btn btn-primary btn-xs auto-url" title="{{ t('base', 'Редактировать') }}" data-url="{{ path('proplan/edit', {'id': proplan.id}) }}">
                            <i class="fa fa-pencil"></i>
                        </button>
                    </th>
                </tr>
            {% endfor %}
        </tbody>

    </table>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    ProplansList.init();
{% endblock %}