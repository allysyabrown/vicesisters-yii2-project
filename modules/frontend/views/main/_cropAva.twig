<div class="shadow crop-ava">
    <div class="cropper-popup-wrap">
        <div class="cropper-main">
            <div class="user-photo">
                <div class="title">
                    {{ t('front', 'Нажми " + " для загрузки фото') }}
                </div>
                <div class="sub-title">
                    {{ t('front', 'Загрузите свое фото') }}
                </div>
                <div class="go-arrow"></div>

                <label class="add-photo-crop" for="inputImage">
                    +
                    <input type="file" name="file" id="inputImage" accept="image/*" class="hide"/>
