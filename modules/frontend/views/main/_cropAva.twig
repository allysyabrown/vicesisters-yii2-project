                    </div>
                    <div class="prof-photo-exm">
                        {{ t('front', 'Профиль') }}
                        <div class="img-preview"></div>
                    </div>
                </div>

                <div class="crop-fotter">
                    <div class="back-btn">{{ t('front', 'Назад') }}</div>
                    <div class="done-btn">{{ t('front', 'Готово') }}</div>
                </div>
            </div>
        </div>
    </div>
