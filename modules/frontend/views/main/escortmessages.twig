{% extends '@frontend/views/layouts/main.twig' %}

{% block scriptFiles %}
    {{ parent() }}
    <script src="{{ '/frontend/js/pages/escort-messages.js' }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    {% for message in messages %}
        <img src="{{ message.image }}" />{{ message.id~' '~message.text }}<br />
    {% endfor %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    EscortMessages.init();
{% endblock %}